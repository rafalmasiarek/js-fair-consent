{
  "name": "js-fair-consent",
  "version": "1.4.3",
  "license": "MIT",
  "description": "Honest, GDPR-compliant consent manager for privacy-friendly analytics.",
  "exports": {
    ".": {
      "import": "./dist/js-fair-consent.min.js",
      "require": "./dist/js-fair-consent.js"
    },
    "./css": "./dist/js-fair-consent.css"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist",
    "build:js": "cp src/consent-analytics.js dist/js-fair-consent.js",
    "build:css": "cp src/consent-banner.css dist/js-fair-consent.css",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:min:js": "esbuild src/consent-analytics.js --format=iife --global-name=ConsentAnalytics --minify --legal-comments=none --outfile=dist/js-fair-consent.min.js",
    "build:min:css": "lightningcss src/consent-banner.css -o dist/js-fair-consent.min.css --minify",
    "build:min": "npm run build && npm run build:min:js && npm run build:min:css"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "lightningcss-cli": "^1.31.1"
  }
}
